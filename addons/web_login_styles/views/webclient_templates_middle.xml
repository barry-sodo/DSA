<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_login_styles.login_template_middle" name="Login">
        <t t-call="web.frontend_layout">
            <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
            <t t-set="body_classname" t-value="'bg-100'"/>
            <t t-set="no_header" t-value="True"/>
            <t t-set="no_footer" t-value="True"/>

            <div class="background" style="background-color:rgb(231, 241, 250); height: 100vh; display: flex; justify-content: center; align-items: center;">
                <div t-attf-class="card border-0 mx-auto bg-white o_database_list"
                     style="max-width: 400px; width: 100%; padding: 2.5rem; border-radius: 10px; box-shadow: 0 0 20px rgba(0,0,0,0.15);">
                    <div class="card-body">

                        <div style="text-align: center; margin-bottom: 2rem;">
                            <img src="/web_login_styles/static/src/img/logo.png"
                                 alt="Logo ANPTIC"
                                 style="max-height: 140px; max-width: 100%;"/>
                        </div>

                        <t t-out="0"/>
                        <form class="oe_login_form" role="form"
                              t-attf-action="/web/login"
                              method="post"
                              onsubmit="this.action = '/web/login' + location.hash">
                            <input type="hidden" name="csrf_token"
                                   t-att-value="request.csrf_token()"/>

                      
                            <div class="form-group field-login">
                                <label for="login" style="color:#004080; font-weight:600;">Email</label>
                                <input type="text" placeholder="Email"
                                       name="login"
                                       t-att-value="login" id="login"
                                       class="form-control"
                                       required="required"
                                       autofocus="autofocus"
                                       autocapitalize="off"/>
                            </div>

                            <div class="form-group field-password">
                                <label for="password" style="color:#004080; font-weight:600;">Password</label>
                                <input type="password"
                                       placeholder="Password"
                                       name="password"
                                       id="password"
                                       class="form-control"
                                       required="required"
                                       autocomplete="current-password"
                                       maxlength="4096"/>
                            </div>

                            <p class="alert alert-danger" t-if="error" role="alert">
                                <t t-esc="error"/>
                            </p>
                            <p class="alert alert-success" t-if="message" role="status">
                                <t t-esc="message"/>
                            </p>

                          
                            <div class="text-center mb-1 pt-3">
                                <button type="submit" class="btn btn-primary btn-block"
                                        style="background-color:#0066cc; border-color:#005bb5; font-weight:600; font-size:1.1rem;">
                                    Connexion
                                </button>
                            </div>

                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                        </form>

                        <div class="text-center small mt-5 pt-3 border-top" t-if="not disable_footer"
                             style="color:#cce0ff;">
                            <a href="https://anptic.gov.bf/"
                               target="_blank"
                               style="color:#cce0ff; text-decoration:none; font-weight:600;">
                                Propuls√© par <span>@2025 ANPTIC</span>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
