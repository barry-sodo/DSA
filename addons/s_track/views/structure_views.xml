<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="action_structure" model="ir.actions.act_window">
    <field name="name">Structures</field>
    <field name="res_model">structure.structure</field>
    <field name="view_mode">list,form</field>
  </record>
  <record id="view_structure_list" model="ir.ui.view">
    <field name="name">structure.structure.list</field>
    <field name="model">structure.structure</field>
    <field name="arch" type="xml">
      <list string="Structures">
        <field name="name"/>
      </list>
    </field>
  </record>
  <record id="view_structure_form" model="ir.ui.view">
    <field name="name">structure.structure.form</field>
    <field name="model">structure.structure</field>
    <field name="arch" type="xml">
      <form string="Structure">
        <sheet>
          <group>
            <field name="name"/>
             <field name="description"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
