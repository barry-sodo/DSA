<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="group_s_track_admin" model="res.groups">
        <field name="name">Administrateur S-Track</field>
        <field name="category_id" ref="base.module_category_tools"/>
    </record>
    <record id="group_chef_service" model="res.groups">
        <field name="name">Chef de Service</field>
        <field name="category_id" ref="base.module_category_tools"/>
    </record>
    <record id="group_agent" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_tools"/>
    </record>
    <record id="base.menu_apps" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
    </record>
    <record id="base.menu_administration" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
    </record>
    <record id="base.menu_users" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
    </record>
    <record id="rule_agent_platforms" model="ir.rule">
        <field name="name">Agent: plateformes assignées</field>
        <field name="model_id" ref="model_plateforme_plateforme"/>
        <field name="groups" eval="[(4, ref('group_agent'))]"/>
        <field name="domain_force">[('personnel_ids.user_id', '=', user.id)]</field>
    </record>
    <record id="rule_agent_projects" model="ir.rule">
        <field name="name">Agent: projets assignés</field>
        <field name="model_id" ref="model_projet_projet"/>
        <field name="groups" eval="[(4, ref('group_agent'))]"/>
        <field name="domain_force">[('personnel_ids.user_id', '=', user.id)]</field>
    </record>
    <record id="rule_agent_tasks" model="ir.rule">
        <field name="name">Agent: ses tâches</field>
        <field name="model_id" ref="model_tache_tache"/>
        <field name="groups" eval="[(4, ref('group_agent'))]"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>
    <record id="rule_agent_reports" model="ir.rule">
        <field name="name">Agent: ses rapports</field>
        <field name="model_id" ref="model_rapport_rapport"/>
        <field name="groups" eval="[(4, ref('group_agent'))]"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>
</odoo>
